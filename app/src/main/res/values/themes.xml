<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Upcon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ThemeOverlay.search" parent="Theme.Upcon">
        <!-- Text color -->
        <item name="android:editTextColor">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#AAAAAA</item>
    </style>
</resources>